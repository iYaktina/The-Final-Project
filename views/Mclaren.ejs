<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
		/>
		<link
			rel="stylesheet"
			href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css"
			integrity="sha384-4LISF5TTJX/fLmGSxO53rV4miRxdg84mZsxmO8Rx5jGtp/LbrixFETvWa5a6sESd"
			crossorigin="anonymous"
		/>
		<link rel="stylesheet" href="../public/css/main.css" />
		<title>Wheels and Deals | McLaren Cars</title>
	</head>
	<body>
		<header>
			<span class="year">2010-2024</span>
			<a href="/" class="logo"
				><img src="../public/images/logo.jpg" alt="logo"
			/></a>
			<a href="#" class="menu" onclick="toggleMenu();"></a>
		</header>
		<div class="banner">
			<%- include('partials/nav', { loggedInUser: loggedInUser }) %>
			<script>
				var isLoggedIn = <%= JSON.stringify(isLoggedIn) %>;
			</script>
			<div class="bg-video-list">
				<% cars.forEach(car => { %>
				<video
					class="bg-video <%= car.carBrand.toLowerCase() %>-<%= car.carModel.toLowerCase().replace(/ /g, '-') %>"
					src="../public/assests/<%= car.carVideos[0] %>"
					autoplay
					loop
					muted
				></video>
				<% }); %>
			</div>
			<div class="content">
				<h1>McLaren</h1>
				<% cars.forEach(car => { %>
				<h3
					class="model <%= car.carBrand.toLowerCase() %>-<%= car.carModel.toLowerCase().replace(/ /g, '-') %>"
					data-image="../public/images/<%= car.carImages[0] %>"
					data-video="../public/assests/<%= car.carVideos[0] %>"
					data-description="<%= car.carDescription %>"
					data-price="<%= car.carPrice %>"
				>
					<%= car.carModel %>
				</h3>
				<% }); %>
				<p></p>
				<a href="#" onclick="openCustomizationPagedyn()"
					>View More Details</a
				>
			</div>
			<a href="#" class="pause active" onclick="pauseVideo()"
				><i class="bi bi-pause-circle"></i
			></a>
			<a href="#" class="play" onclick="playVideo()"
				><i class="bi bi-play-circle"></i
			></a>
			<div class="screen">
				<div class="shadow"></div>
				<div>
					<% cars.forEach((car, index) => { %>
					<span style="--i: 0">
						<video
							class="trailer <%= car.carBrand.toLowerCase() %>-<%= car.carModel.toLowerCase().replace(/ /g, '-') %> screen-video"
							src="../public/assests/<%= car.carVideos[0] %>"
							autoplay
							loop
							muted
						></video>
					</span>
					<% }); %>
					<span style="--i: 1">
						<video
							class="screen-video"
							src="../public/assests/Mclaren/trailer-1.mp4 "
							autoplay
							loop
							muted
						></video>
					</span>
					<span style="--i: 2">
						<video
							class="screen-video"
							src="../public/assests/Mclaren/trailer-2.mp4"
							autoplay
							loop
							muted
						></video>
					</span>
					<span style="--i: 3">
						<video
							class="screen-video"
							src="../public/assests/Mclaren/trailer-3.mp4"
							autoplay
							loop
							muted
						></video>
					</span>
				</div>
			</div>
			<div class="gallery">
				<div class="carousel">
					<% cars.forEach(car => { %>
					<a
						class="carousel-item"
						href="#"
						onclick="changeVideo('<%= car.carBrand.toLowerCase() %>-<%= car.carModel.toLowerCase().replace(/ /g, '-') %>');"
					>
						<img
							src="../public/images/<%= car.carImages[0] %>"
							alt=""
						/>
						<h4><%= car.carModel %></h4>
					</a>
					<% }); %>
				</div>
			</div>
		</div>
		<ul class="sci">
			<li>
				<a href="#"><i class="bi bi-facebook"></i></a>
			</li>
			<li>
				<a href="#"><i class="bi bi-instagram"></i></a>
			</li>
			<li>
				<a href="#"><i class="bi bi-youtube"></i></a>
			</li>
		</ul>
		<script src="https://code.jquery.com/jquery-3.7.1.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
		<script src="../public/js/script.js"></script>
	</body>
</html>
